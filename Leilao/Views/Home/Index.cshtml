@using Leilao.Models
@model List<Produto>


<div class="row">

    @if (Model != null && Model.Count != 0)
    {
        <div>
            <table class="table table-striped">
                <tr class="table-secondary">
                    <th>Nome</th>
                    <th>Datalhes</th>
                </tr>
                @foreach (Produto produto in Model)
                {
                    <tr>
                        <td>@produto.Nome</td>

                        <td>@Html.ActionLink("Leilão", "Details", "Produto", new { id = produto.Id }, new { @class = "btn btn-primary" })</td>
                    </tr>
                }
            </table>
        </div>
    }
</div>

@section scripts
{
    <script>
        $('#Data').val(dataAtualFormatada);
        function dataAtualFormatada() {
            var data = new Date();
            var dia = data.getDate();
            if (dia.toString().length == 1)
                dia = "0" + dia;
            var mes = data.getMonth() + 1;
            if (mes.toString().length == 1)
                mes = "0" + mes;
            var ano = data.getFullYear();
            return dia + "/" + mes + "/" + ano;
        }
    </script>
}
