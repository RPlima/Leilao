@model Leilao.DTO.PessoaDTO
@{
    ViewBag.Title = "Cadastrar Pessoa";
}


@using (Html.BeginForm("Create", "Pessoa", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
{
    <br />
    <div class="jumbotron">

        @Html.AntiForgeryToken()

        <fieldset>
            <legend>Cadastrar Pessoa</legend>

            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            <div class="container">
                @Html.ValidationMessageFor(Model => Model.Nome, null, new { @class = "valid-feedback" })
                @Html.LabelFor(Model => Model.Nome, null, new { @class = "control-label col-md-11" })
                @Html.TextBoxFor(Model => Model.Nome,
                    new
                    {
                        @class = "form-control",
                        @placeholder = "Digite seu nome completo."

                    })<br />

                @Html.ValidationMessageFor(Model => Model.Idade, null, new { @class = "valid-feedback" })
                @Html.LabelFor(Model => Model.Idade, null, new { @class = "control-label col-md-11" })
                @Html.TextBoxFor(Model => Model.Idade,
                    new
                    {
                        @class = "form-control",
                        @placeholder = "Digite sua Idade.",
                        @type = "number"
                    })<br />

                @Html.ValidationMessageFor(Model => Model.Email, null, new { @class = "text-danger" })
                @Html.LabelFor(Model => Model.Email, null, new { @class = "control-label col-md-11" })
                @Html.TextBoxFor(Model => Model.Email,
                    new
                    {
                        @class = "form-control",
                        @placeholder = "Ex: exemplo@exemplo.com"

                    })<br /> 

                @Html.ValidationMessageFor(Model => Model.Senha, null, new { @class = "text-danger" })
                @Html.LabelFor(Model => Model.Senha, null, new { @class = "control-label col-md-11" })
                @Html.PasswordFor(Model => Model.Senha,
                    new
                    {
                        @class = "form-control",
                        @placeholder = "Digite aqui sua senha."

                    })<br />
            </div>
        </fieldset>
        <input type="submit" value="Cadastrar" class="btn btn-success" />
    </div>
}


