@using Leilao.DTO
@model List<LanceDTO>
@{
    ViewBag.Title = "Leilões";
    var teste = @Model;
    var teste2 = teste;
}

<h2>Leilões</h2>

<table id="table_leilao" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Lance feito por</th>
            <th>Nome do produto</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var dataModel = JSON.parse('@Html.Raw(Json.Encode(@Model))');
            console.log(dataModel);
            $('#table_leilao').DataTable(
                {
                    responsive: true,
                    data: dataModel,
                    columns: [
                        { data: "NomePessoa" },
                        { data: "NomeProduto" },
                        { data: "Valor" }
                    ]
                });
        });
    </script>
}
